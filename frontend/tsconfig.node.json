{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@frontend/*": ["./src/*"],
      "@shared/*": ["../shared/*"]
    }
  },
  "include": ["vite.config.ts", "../shared/**/*"]
}

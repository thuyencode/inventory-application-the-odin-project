{
  "name": "create-nodejs-typescript",
  "version": "1.0.0",
  "description": "A simple template to start a NodeJS and TypeScript project",
  "main": "backend/index.ts",
  "type": "module",
  "scripts": {
    "build:backend": "esbuild backend/index.ts --bundle --minify --packages=external --platform=node --outfile=dist/index.js --format=esm",
    "dev:backend": "tsx watch --env-file=.env.development.local backend/index.ts",
    "start:backend": "node --env-file=.env.production dist/index.js",
    "lint:backend": "tsc ; eslint ./backend",
    "populate-db:dev": "dotenvx run -f .env.development.local -- tsx scripts/populate_db.ts",
    "populate-db:prod": "dotenvx run -f .env.production -- tsx scripts/populate_db.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thuyencode/create-nodejs-typescript.git"
  },
  "keywords": [
    "nodejs",
    "typescript"
  ],
  "author": "Thuyen Code",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/thuyencode/create-nodejs-typescript/issues"
  },
  "homepage": "https://github.com/thuyencode/create-nodejs-typescript#readme",
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@types/compression": "^1.7.5",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^4.17.21",
    "@types/node": "^22.0.0",
    "@types/pg": "^8.11.6",
    "esbuild": "^0.23.0",
    "eslint": "^8.57.0",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4",
    "typescript-eslint": "^7.17.0"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.6.4",
    "compression": "^1.7.4",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "express-async-handler": "^1.2.0",
    "helmet": "^7.1.0",
    "http-status-ts": "^2.0.1",
    "pg": "^8.12.0",
    "valibot": "^0.37.0"
  }
}
